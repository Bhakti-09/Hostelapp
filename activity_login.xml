<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    android:rotationY="0"
    tools:context=".LoginActivity">

    <EditText
        android:id="@+id/editTextText1Username"
        android:layout_width="242dp"
        android:layout_height="45dp"
        android:background="@android:drawable/button_onoff_indicator_off"
        android:ems="10"
        android:hint="Username"
        android:inputType="text"
        android:padding="10dp"
        android:textColor="#131212"
        android:textColorHint="#736E6E"
        android:textColorLink="#1A1717"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.585"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2Login"
        app:layout_constraintVertical_bias="0.161" />

    <TextView
        android:id="@+id/textView2Login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="LOGIN"
        android:textColor="#0E0E0E"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.472" />

    <EditText
        android:id="@+id/editTextText2Password"
        android:layout_width="242dp"
        android:layout_height="45dp"
        android:background="@android:drawable/button_onoff_indicator_off"
        android:ems="10"
        android:inputType="textPassword"
        android:padding="10dp"
        android:text="Password"
        android:textColorHint="#5F5555"
        android:textColorLink="#090808"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.585"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editTextText1Username"
        app:layout_constraintVertical_bias="0.098" />

    <Button
        android:id="@+id/button3Button"
        android:layout_width="236dp"
        android:layout_height="46dp"
        android:text="Submit"
        android:textColorLink="#5E24C6"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.6"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editTextText2Password"
        app:layout_constraintVertical_bias="0.134" />

    <TextView
        android:id="@+id/textView4NewReg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="104dp"
        android:text="Register for new user"
        android:textColor="#212020"
        android:textColorHighlight="#4D4B4B"
        android:textColorHint="#393737"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.552"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button3Button"
        app:layout_constraintVertical_bias="0.482" />
</androidx.constraintlayout.widget.ConstraintLayout>